# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Production stage
FROM node:20-alpine

WORKDIR /app

# Copy built files
COPY --from=builder /app/build ./build
COPY --from=builder /app/package*.json ./

# Install ONLY production dependencies
RUN npm ci --omit=dev

# Environment variables
ENV NODE_ENV=production
ENV PORT=5173

EXPOSE 5173

# Start the application using the entry point generated by adapter-node
CMD ["node", "build/index.js"]
